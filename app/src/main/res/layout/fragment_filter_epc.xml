<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#90caf9"
    tools:context=".fragment.FilterEpcFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvFilterEpc"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#90caf9"
        app:layout_constraintBottom_toTopOf="@+id/btnCompareEpcs"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:listitem="@layout/item_filter_epc_fragment"/>

    <Button
        android:id="@+id/btnCompareEpcs"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="8dp"
        android:backgroundTint="#006db3"
        android:text="enviar remitos seleccionados"
        app:cornerRadius="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>